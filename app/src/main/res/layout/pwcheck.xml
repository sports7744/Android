<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#C8D7FF"
    tools:context = ".PwCheckActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="비밀번호 찾기"
            android:textSize="40sp"
            android:fontFamily="@font/nanumbarunpenr"
            android:textColor="#464646"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarunpenr"
            android:text="아이디"
            android:textColor="#464646"/>
        <EditText
            android:id="@+id/pwCheck_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarunpenr"
            android:textColor="#464646"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarunpenr"
            android:text="이름"
            android:textColor="#464646"/>
        <EditText
            android:id="@+id/pwCheck_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarunpenr"
            android:textColor="#464646"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarunpenr"
            android:text="이메일" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarunpenr"
            android:id="@+id/pwCheck_email"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnPwCheck"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="#1478CD"
        android:fontFamily="@font/nanumbarunpenr"
        android:text="비밀번호 찾기"/>

    <Button
        android:id="@+id/pwLogin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#C8D7FF"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumbarunpenr"
        android:text="로그인 화면으로" />
</LinearLayout>